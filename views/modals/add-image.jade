div.modal.fade(tabindex="-1", role="dialog", aria-hidden="true")#modal-add-image
	div.modal-dialog.modal-md
		div.modal-content
			div.modal-header
				button(type='button', data-dismiss='modal').close
					span(aria-hidden='true') &times;
					span.sr-only close
				h4.modal-title Add new image
			form.modal-body#add-image-form
				section.form-group
					label Select Image
					input(type='file')#new-image-file
				section.form-group
					label Short Description Dhivehi (optional)
					textarea.form-control.thaana(name='description_dv')
				section.form-group
					label Short Description English (optional)
					textarea.form-control(name='description_en')
				section.form-group
					label Tags (seperated by comma)
					p
						small Ex: president, #elections2018, raees launch
					textarea.form-control(name='tags')
				section.form-group
					label Source or Photographer (optional)
					input(type='text', name='source').form-control
				section.form-group
					button.btn.btn-success#add-image Add Image