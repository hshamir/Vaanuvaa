div.modal.fade.user-edit-settings-modal(tabindex="-1", role="dialog", aria-hidden="true", id=modal_id)
	div.modal-dialog.modal-md
		div.modal-content
			div.modal-header
				button(type='button', data-dismiss='modal').close
					span(aria-hidden='true') &times;
					span.sr-only close
				h4.modal-title Add media to album
			div.modal-body
				form.jumbotron
					section.form-group
						label Select multiple files
						input(type='file', multiple).file-select
						br
						br
						section
							span.btn.btn-info.upload Upload files
				section.files-display
script.
	$(function(){
		$("##{modal_id} ").modal('show');
		$('body').on('click', '##{modal_id} .upload', function(){
			var files = $('##{modal_id} .file-select');
			files = files.get(0).files;
			if(!files.length){
				return alert('no file selected');
			}
			var req =  superagent.post('/media/image');
			req.set("Content-Type", "application/octet-stream");
			for(var i=0;i<files.length;i++){
				var f = files[i];
				req.send(f);
			}
			req.end(function(res){
				console.log(res);
			})

		})
		$('body').on('click', '##{modal_id} .add-album', function(){
			var data = $("##{modal_id} form").serializeJSON();
			cinepix.handleCommand({
				route:"/media/new-album?type=bulk",
				method:"post",
				payload:data
			});

		})
	});