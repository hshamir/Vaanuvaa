doctype html
html
	head
		title Vaanuvaa
		meta(name="robots", content="noindex, nofollow")
		link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css')
		style body{background-color:#333} .btn.active{background:gray !important;} body{padding:40px} .wizard-content .control-label{font-size:15px;}.step-content{padding:15px;}			.loading{cursor:progress;}			textarea{width:500px !important; height:150px !important;} .jumbotron{background: #025096;} h1{font-size:44px !important; color:white !important; font-family: "Open Sans";font-weight: 100;} p{color: white;font-family: "open sans";}

	body

		section.row
			section.container(style=';width:480px')
				section(style='text-align:center;')
					img(src='/images/logo.png')
				section.jumbotron
					h1 Hello, welcome!
					p Please login to continue
					-if (typeof msg != 'undefined')
						p.alert.alert-error
							small
								strong(style='color:#666')=msg
					form(method='post', action='/login', style='margin-top:60px')
						div.input
							input(name='username',type='text',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;margin-bottom: 14px;',placeholder='Username').form-control
						div.input
							input(name='password',type='password',style='height:46px;font-size: 16px;color: black;width: 100%;box-shadow: inset 0 1px 1px #ddd;',placeholder='Password').form-control
						div.actions.clearfix
							br
							input(value='Log in',type='submit',style='padding: 0.8em 3em;font-weight:bold;font-size:16px').btn.btn-info.btn-block
				section.footer
					p(style='text-align:center;color:#777') &copy; Vaanuvaa